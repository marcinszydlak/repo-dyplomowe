@{
    ViewBag.Title = "Lista Tasków";
    Layout = "~/Views/Shared/Student.cshtml";
}

<h2>ManageTasks</h2>

    @Html.Grid(Model).Named("CourseList").Columns(columns =>
{
    columns.Add(x => x.TaskId).Titled("IdZadania");
