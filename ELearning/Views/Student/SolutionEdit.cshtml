@model DataServices.ViewModels.SolutionModel

@{
    ViewBag.Title = "SolutionEdit";
    Layout = "~/Views/Shared/Student.cshtml";
}

<h2>Zmień plik w rozwiązaniu</h2>

@using (Html.BeginForm("SolutionEdit", "Student", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Rozwiązanie</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.HiddenFor(Model => Model.SolutionId)
        @Html.HiddenFor(Model =>Model.TaskId)
        <div class="form-group">
            @Html.Label("Solution", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="file" id="Solution" name="upload" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Edytuj" class="btn btn-default" />
            </div>
        </div>
    </div>
}

