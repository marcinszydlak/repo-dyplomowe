@model DataServices.ViewModels.SolutionModel

@{
    ViewBag.Title = "InsertSolution";
    Layout = "~/Views/Shared/Student.cshtml";
}

<h2>Wstaw rozwiązanie do zadania</h2>

@using (Html.BeginForm("InsertSolution", "Student", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Rozwiązanie</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.HiddenFor(model => model.TaskId)
        <div class="form-group">
            @Html.Label("Solution", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="file" id="Solution" name="upload" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Dodaj" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
